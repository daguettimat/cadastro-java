<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<resource-handler>org.omnifaces.resourcehandler.CombinedResourceHandler</resource-handler>
		<action-listener>org.primefaces.application.DialogActionListener</action-listener>
		<navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
		<view-handler>org.primefaces.application.DialogViewHandler</view-handler>
	</application>

	<converter>
		<converter-id>cnpjConverter</converter-id>
		<converter-class>br.com.global5.infra.converter.CNPJConverter</converter-class>
	</converter>

    <converter>
        <converter-id>cpfConverter</converter-id>
        <converter-class>br.com.global5.infra.converter.CPFConverter</converter-class>
    </converter>

	<factory>
			<exception-handler-factory>br.com.global5.template.exception.CustomExceptionHandlerFactory</exception-handler-factory>
	</factory>

</faces-config>
